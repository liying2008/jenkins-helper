{
  "name": "jenkins-helper",
  "version": "3.0.0",
  "description": "Monitor Jenkins build state and node state, and provide some convenient services.",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint '{src,scripts}/**/*.{json,ts,js,vue}'",
    "test": "vitest test",
    "browserslist": "browserslist --config=./.browserslistrc"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.30",
    "@mdi/font": "^6.7.96",
    "@mdi/js": "^6.7.96",
    "@nodelib/fs.scandir": "^2.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.25",
    "@types/webextension-polyfill": "^0.8.3",
    "@types/webfontloader": "^1.6.34",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/test-utils": "^2.0.0-rc.20",
    "@vueuse/core": "^8.2.6",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^9.1.1",
    "esno": "^0.14.1",
    "fs-extra": "^10.1.0",
    "jsdom": "^19.0.0",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-html": "^1.4.1",
    "postcss-scss": "^4.0.4",
    "rimraf": "^3.0.2",
    "sass": "^1.26.11",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.6.3",
    "unplugin-auto-import": "^0.8.8",
    "unplugin-icons": "^0.14.5",
    "unplugin-vue-components": "^0.19.6",
    "vite": "^2.9.5",
    "vite-plugin-inspect": "^0.5.0",
    "vite-plugin-vuetify": "1.0.0-alpha.12",
    "vite-plugin-windicss": "^1.8.4",
    "vitest": "^0.9.3",
    "vue": "^3.2.33",
    "vue-demi": "^0.12.5",
    "web-ext": "^6.8.0",
    "webext-bridge": "^5.0.4",
    "webextension-polyfill": "^0.9.0"
  },
  "dependencies": {
    "roboto-fontface": "*",
    "vue-router": "^4.0.16",
    "vuetify": "^3.0.0-beta.0",
    "webfontloader": "^1.6.28"
  }
}
